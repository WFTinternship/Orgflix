<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath:connection.properties"/>

    <!-- DB data source. -->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass" value="${DriverClass}" />
        <property name="jdbcUrl" value="${TestJdbcUrl}" />
        <property name="user" value="${user}" />
        <property name="password" value="${password}" />
        <property name="initialPoolSize" value="${InitialPoolSize}" />
        <property name="acquireIncrement" value="${AcquireIncrement}" />
        <property name="maxPoolSize" value="${MaxPoolSize}" />
        <property name="minPoolSize" value="${MinPoolSize}" />
    </bean>


    <context:component-scan base-package="am.aca.dao.jdbc.impljdbc" />

    <bean id="jdbcUserDAO" class="am.aca.dao.jdbc.impljdbc.JdbcUserDAO" />
    <bean id="jdbcCastDAO" class="am.aca.dao.jdbc.impljdbc.JdbcCastDAO" />
    <bean id="jdbcFilmDAO" class="am.aca.dao.jdbc.impljdbc.JdbcFilmDAO" />
    <bean id="listDaoJdbc" class="am.aca.dao.jdbc.impljdbc.JdbcListDAO" />

    <bean id="userServiceImpl" class="am.aca.service.impl.UserServiceImpl" />
    <bean id="castServiceImpl" class="am.aca.service.impl.CastServiceImpl" />
    <bean id="filmServiceImpl" class="am.aca.service.impl.FilmServiceImpl" />
    <bean id="listServiceImpl" class="am.aca.service.impl.ListServiceImpl" />

    <bean id="testHelper" class="am.aca.util.TestHelper" />


</beans>